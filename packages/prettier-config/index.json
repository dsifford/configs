{
    "$schema": "http://json.schemastore.org/prettierrc",
    "printWidth": 80,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "all",
    "overrides": [
        {
            "files": "*.js",
            "options": {
                "trailingComma": "es5"
            }
        },
        {
            "files": [
                "{.,}*.{json,md,yaml,yml}",
                ".babelrc"
            ],
            "options": {
                "tabWidth": 2    
            }
        },
        {
            "files": [
                "{.,}*.json",
                ".babelrc"
            ],
            "options": {
                "parser": "json-stringify"
            }
        }
    ]
}
